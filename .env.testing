# Testing Environment Configuration
APP_NAME="Guardian Testing"
APP_ENV=testing
APP_KEY=base64:TEST_KEY_FOR_GUARDIAN_SYSTEM_TESTING_ONLY
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Test Database Configuration
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5433
DB_DATABASE=guardian_test_db
DB_USERNAME=falcon_test_user
DB_PASSWORD=falcon_test_pass

# Test Cache & Session
BROADCAST_DRIVER=log
CACHE_DRIVER=array
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
SESSION_LIFETIME=120

# Test Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6380

# Test Mail
MAIL_MAILER=array
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="test@guardian.local"
MAIL_FROM_NAME="${APP_NAME}"

# Security Testing
GUARDIAN_SECURITY_MODE=testing
GUARDIAN_ENCRYPTION_KEY=test_encryption_key_32_characters
GUARDIAN_MACHINE_FINGERPRINT=test_machine_fingerprint

# OAuth Testing (Mock providers)
GITHUB_CLIENT_ID=test_github_client
GITHUB_CLIENT_SECRET=test_github_secret
GOOGLE_CLIENT_ID=test_google_client
GOOGLE_CLIENT_SECRET=test_google_secret
